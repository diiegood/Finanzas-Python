# Anderson-Darling
result_ad = anderson(x)

# Jarque-Bera
stat_jb, p_jb = jarque_bera(x)

# ===============================
# üìä HISTOGRAMA CON CURVA NORMAL
# ===============================
plt.figure(figsize=(10, 5))
sns.histplot(x, bins=50, kde=False, color='lightblue', stat='density', label='Datos reales')

# Curva normal te√≥rica (media y std de la muestra)
mu, std = np.mean(x), np.std(x)
xmin, xmax = plt.xlim()
x_norm = np.linspace(xmin, xmax, 100)
plt.plot(x_norm, norm.pdf(x_norm, mu, std), 'r--', label='Normal te√≥rica')

plt.title("Histograma del Precio de Cierre USD/MXN con Distribuci√≥n Normal")
plt.xlabel("Precio de cierre")
plt.ylabel("Densidad")
plt.legend()
plt.grid(True)
plt.tight_layout()
plt.show()

# ===============================
# üìà QQ PLOT
# ===============================
plt.figure(figsize=(6, 6))
probplot(x, dist="norm", plot=plt)
plt.title("QQ Plot - Precio de Cierre USD/MXN")
plt.grid(True)
plt.tight_layout()
plt.show()

# ===============================
# üìÉ RESULTADOS ESTAD√çSTICOS
# ===============================
print("==== RESULTADOS DE PRUEBAS DE NORMALIDAD ====\n")

print("üîπ Shapiro-Wilk:")
print(f"  Estad√≠stico = {stat_shapiro:.4f}, p-valor = {p_shapiro:.4f}")
print("  ¬øDistribuci√≥n normal?:", "S√≠ ‚úÖ" if p_shapiro > 0.05 else "No ‚ùå")

print("\nüîπ Anderson-Darling:")
print(f"  Estad√≠stico = {result_ad.statistic:.4f}")
for i in range(len(result_ad.critical_values)):
    print(f"    Nivel de significancia {result_ad.significance_level[i]}%: {result_ad.critical_values[i]}")
print("  ¬øDistribuci√≥n normal?:", "No ‚ùå" if result_ad.statistic > result_ad.critical_values[2] else "S√≠ ‚úÖ")

print("\nüîπ Jarque-Bera:")
print(f"  Estad√≠stico = {stat_jb:.4f}, p-valor = {p_jb:.4f}")
print("  ¬øDistribuci√≥n normal?:", "S√≠ ‚úÖ" if p_jb > 0.05 else "No ‚ùå")

